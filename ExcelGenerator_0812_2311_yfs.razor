                    // Set the title of the worksheet
                    worksheet.Cells["A1"].Value = "Date";
                    worksheet.Cells["B1"].Value = DateTime.Now.ToString("yyyy-MM-dd");

                    // Save the package to a memory stream
                    using (var stream = new MemoryStream())
                    {
                        package.SaveAs(stream);

                        // Convert the stream to a base64 string for download
                        var fileBase64 = Convert.ToBase64String(stream.ToArray());

                        // Trigger the file generation event
                        OnFileGenerated?.Invoke(FileName);
                    }
                }
            }
            catch (Exception ex)
            {
# FIXME: 处理边界情况
